{                                                                                                                                                                     
        "version": "0.2.0",                                                                                                                                               
        "configurations": [                                                                                                                                               
            {                                                                                                                                                             
                "name": "Debug C++ with clang++",
                "type": "cppdbg",
                "request": "launch",
                "program": "${fileDirname}/${fileBasenameNoExtension}",
                "args": [],
                "stopAtEntry": false,
                "cwd": "${fileDirname}",
                "environment": [],
                "externalConsole": false,
                "MIMode": "lldb",                                                                                                                                         
                "preLaunchTask": "C/C++: clang++ build active file",
                "setupCommands": [                                                                                                                                        
                    {                                                                                                                                                     
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }                                                                                                                                                     
                ]                                                                                                                                                         
            }                                                                                                                                                             
        ]                                                                                                                                                                 
    }